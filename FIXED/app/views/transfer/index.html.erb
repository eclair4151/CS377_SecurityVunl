<div class="panel panel-default">
  <div class="panel-heading"><strong>Send/Request Funds</strong></div>

  <div class="panel-body">
    <form  action="/transfer" method="post">
      <div class="form-group">
        <label for="email">Recipient Email</label>
        <input type="text" class="form-control" name="email" id="email" placeholder="Email">
      </div>
      <div class="form-group">
        <label for="amount">Amount</label>
        <input type="number" class="form-control" name="amount" step=".01" id="amount" placeholder="Amount" step="0.01">
      </div>
      <div class="form-group">
        <label for="transfer_type">Type:</label>
        <select class="form-control" id="transfer_type" name="transfer_type">
          <option value="send">Send</option>
          <option value="request">Request</option>
        </select>
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        <textarea name="message" id="message" class="form-control" placeholder="Message" cols="40" rows="5"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Send</button>
    </form>
  </div>
</div>