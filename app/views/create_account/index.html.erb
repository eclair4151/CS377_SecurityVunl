<body class="page-color">
<div class="container page-color">
  <div class="base-color">
    <h1>
      Create Account
    </h1>
  </div>
  <div class="panel panel-default container-color col-sm-6 col-sm-offset-3" style="margin-top: 20px">
    <p id="error"  style="color:red"><%= flash[:error] %></p>
    <form action="/create_account"  name="createForm" onsubmit="DoCreate();" class="panel-body panel-container" method="post">
      <div class="form-group" style="margin: 15px">
        <label for="usr">Email:</label>
        <input type="email" class="form-control" id="usr" name="email">
      </div>
      <div class="form-group" style="margin: 15px">
        <label for="first">First Name:</label>
        <input type="text" class="form-control" id="first" name="first_name">
      </div>
      <div class="form-group" style="margin: 15px">
        <label for="last_name">Last Name:</label>
        <input type="text" class="form-control" id="last_name" name="last_name">
      </div>
      <div class="form-group" style="margin: 15px">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" name="password">
      </div>
      <div class="form-group" style="margin: 15px">
        <label for="c_password">Confirm Password:</label>
        <input type="password" class="form-control" id="c_password" name="c_password">
      </div>
      <button type="submit" class="btn btn-default base-color" style="float:right; margin:15px;">CREATE ACCOUNT</button>
    </form>
    <a href="/login">Already have an account? Login Here.</a>

  </div>
</div>
</body>